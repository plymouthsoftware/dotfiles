# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"

# Bundler
alias b="bundle"
alias be="bundle exec"

# Tests and Specs
alias t="bin/ruby -I test"

# Rails
alias migrate="bin/rake db:migrate db:rollback && rake db:migrate db:test:prepare"
alias s="rspec"
alias rk="bin/rake"
alias fs="bundle exec foreman start"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Include custom aliases
if [[ -f ~/.aliases.local ]]; then
  source ~/.aliases.local
fi
